extends layout

block content

  h1 Delete Genre: #{genre.name}

  if genre_books.length

    p #[strong Delete the follow books before attempting to delete this genre.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Books

      d1 
      each book in genre_books
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}

  else
    p Do you reall want to delete this Genre?

    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden', name='id', require='true', value=genre._id)

      button.btn.btn-primary(type='submit') Delete

